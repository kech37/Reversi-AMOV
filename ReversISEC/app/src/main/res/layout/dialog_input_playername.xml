<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/ivClosePopupLose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/close_button"
        android:elevation="5dp"
        android:src="@drawable/ic_close_black_24dp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cardBackgroundColor="@color/colorInputDialog"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialogTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/player_2_name"
                android:textAlignment="center"
                android:textColor="@color/colorLoseFill"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etInputText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/text_input"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:lines="1"
                android:maxEms="25"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:text="@string/player_name"
                android:textAlignment="center"
                android:textColor="@color/colorFillInputDialog"
                android:textSize="24sp"
                tools:targetApi="o" />

            <Button
                android:id="@+id/dialogOkbtn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_input"
                android:text="@string/ok"
                android:textColor="@color/colorLoseFill" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>